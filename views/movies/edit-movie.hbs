<h2>Edit movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
    <label> Title:
        <input type="text" name="title" value="{{movie.title}}"/>
    </label>
    <label> Genre:
        <input type="text" name="genre" value="{{movie.genre}}" />
    </label>
    <label> Plot:
        <textarea name="plot" rows="4" cols="50" >{{movie.plot}}</textarea>
    </label>
    <label> Cast:
        <select name="cast" multiple>
            {{#each celebrities}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </label>
    <button type="submit">Submit</button>
</form>