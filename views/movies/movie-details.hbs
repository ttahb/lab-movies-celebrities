<h2>Movie Details</h2>
<p>{{title}}</p>
<p>{{genre}}</p>
<p>{{plot}}</p>

{{#each cast}}
<h3>{{name}}</h3>
<p>{{occupation}}</p>
<p>{{catchPhrase}}</p>
{{/each}}
<a href="/movies/{{_id}}/edit">Edit</a>
<form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">Delete</button>
</form>